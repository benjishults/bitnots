(setq *strings-only* t)

(def-predicate (closed-in a b)
  (open-in (the-set-difference-of b a) b)
  (string "@1 is a closed subset of @2"))

(def-term (the-graph-of f)
  ()
  (string "the graph of @1"))

(def-term (the-domain-of f)
  ()
  (string "the domain of @1"))

(def-term (the-product-top-space-of a b)
  ()
  (string "the product topological space of @1 and @2"))

(def-term (the-product-of a b)
  ()
  (string "the cartesian product of @1 and @2"))

(def-term (apply a b)
  ()
  (string "{@1}(@2)"))

(def-term (the-ordered-pair a b)
  ()
  (string "<@1, @2>"))

